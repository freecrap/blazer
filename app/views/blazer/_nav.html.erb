<div class="btn-group">
  <%= link_to "Home", root_path, class: "btn btn-primary" %>
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "Checks", checks_path, class: "dropdown-item" %></li>
    <li role="separator" class="divider"></li>
    <li><%= link_to "New Query", new_query_path, class: "dropdown-item" %></li>
    <li><%= link_to "New Dashboard", new_dashboard_path, class: "dropdown-item" %></li>
    <% check_params = @query ? {query_id: @query.id} : {} %>
    <li><%= link_to "New Check", new_check_path(check_params), class: "dropdown-item" %></li>
  </ul>
</div>
